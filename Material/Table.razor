@typeparam T
<table class="table table-bordered dataTable m-table @TableClass" width="100%" cellspacing="0" role="grid" style="width: 100%;">
    <thead>
        <tr role="row">
            @foreach (string item in Headers)
            {
                <th class="sorting" rowspan="1" colspan="1">@item</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Items)
        {
                  @RowTemplate(item)
        }
        </tbody>

    @if (HasFooter)
    {
        <tfoot>
            <tr>
                @foreach (string item in Headers)
                {
                    <th rowspan="1" colspan="1">@item</th>
                }
            </tr>
        </tfoot>
    }
</table>

@code {
    [Parameter] public bool HasFooter { get; set; }
    [Parameter] public string[] Headers { get; set; }
    [Parameter] public RenderFragment<T> RowTemplate { get; set; }
    [Parameter] public string TableClass { get; set; }
    [Parameter]
    public IEnumerable<T> Items { get; set; } = Enumerable.Empty<T>();
}
