@inherits ButtonBase
<button class="btn @GetButtonTypeClass() @GetButtonSizeClass() @Classes @(Stretch ? "btn-block" : string.Empty)" type="@GetButtonType()" @attributes="Attributes" @onclick="OnClick" disabled="@(!IsEnabled)">@ChildContent</button>
@code {
    private string GetButtonTypeClass()
     => Style switch
     {
         Style.Primary => "btn-outline-primary",
         Style.Secondary => "btn-outline-secondary",
         Style.Success => "btn-outline-success",
         Style.Danger => "btn-outline-danger",
         Style.Warning => "btn-outline-warning",
         Style.Info => "btn-outline-info",
         Style.Light => "btn-outline-light",
         Style.Dark => "btn-outline-dark",
         _ => string.Empty
     };
}
